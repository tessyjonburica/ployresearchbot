# ============================================
# REQUIRED: AI API Keys
# ============================================
ANTHROPIC_API_KEY=your_claude_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================
# TELEGRAM NOTIFICATIONS (Optional but recommended)
# ============================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram chat ID (use @userinfobot to get it)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# MARKET FILTERING CRITERIA (Optional)
# ============================================
# Minimum market liquidity in USD
MIN_LIQUIDITY_USD=1000.0

# Minimum 24-hour trading volume in USD
MIN_VOLUME_24H_USD=500.0

# Maximum days until market resolution
MAX_DAYS_TO_RESOLUTION=90

# Minimum days until market resolution
MIN_DAYS_TO_RESOLUTION=1

# ============================================
# PIPELINE LIMITS (Optional)
# ============================================
# Maximum markets to fetch from Polymarket
MAX_MARKETS_TO_SCAN=100

# Maximum markets to research with Perplexity
MAX_MARKETS_TO_RESEARCH=10

# Maximum markets to judge with Claude
MAX_MARKETS_TO_JUDGE=5

# ============================================
# SCHEDULING (Optional)
# ============================================
# Hours between automated scans (default: 6)
SCAN_INTERVAL_HOURS=6

# Hour of day to generate daily report (0-23)
REPORT_GENERATION_HOUR=8

# Timezone for scheduling
REPORT_TIMEZONE=UTC

# ============================================
# LOGGING (Optional)
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/bot.log

# ============================================
# STORAGE (Optional)
# ============================================
# Database file path
DB_PATH=data/research_bot.db

# Backup directory
DB_BACKUP_DIR=data/backups

# Report output directory
REPORT_OUTPUT_DIR=reports
